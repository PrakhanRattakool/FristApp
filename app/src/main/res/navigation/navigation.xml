<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"

    app:startDestination="@id/titleFragment">
    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.fristapp.TitleFragment"
        android:label="Profile" />
    <fragment
        android:id="@+id/contactFragment"
        android:name="com.example.fristapp.ContactFragment"
        android:label="Contact" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.fristapp.AboutFragment"
        android:label="About" />
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.firstapp.fragments.list.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.firstapp.fragments.add.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>